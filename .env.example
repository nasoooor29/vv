# Application Configuration
PORT=9999
APP_ENV=development
APP_VERSION=0.0.2

# Database
BLUEPRINT_DB_DATABASE=visory.db

# OAuth - Google
# Get these from https://console.cloud.google.com/
GOOGLE_OAUTH_KEY=your-google-client-id-here
GOOGLE_OAUTH_SECRET=your-google-client-secret-here

# OAuth - GitHub
# Get these from https://github.com/settings/developers
GITHUB_OAUTH_KEY=your-github-client-id-here
GITHUB_OAUTH_SECRET=your-github-client-secret-here

# OAuth Callback URL
# Change to your production domain when deploying
OAUTH_CALLBACK_URL=http://localhost:9999/api/auth/oauth/callback

# Session Secret
# Generate a random secret for cookie encryption
# Example: openssl rand -base64 32
SESSION_SECRET=your-session-secret-here

# Discord Webhook Configuration
# Get your webhook URL from Discord: Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=
# Enable/disable notifications by level (defaults: error=true, warn=false, info=false)
DISCORD_NOTIFY_ON_ERROR=true
DISCORD_NOTIFY_ON_WARN=false
DISCORD_NOTIFY_ON_INFO=false
